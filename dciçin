import discord
from discord.ext import commands
import os
import random

intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='', intents=intents)

@bot.event
async def on_ready():
    print(f'{bot.user} olarak ben geldim!')

@bot.command(name="$mem")
async def mem(ctx):
    img_list = os.listdir('images')
    img_name = random.choice(img_list)
    with open(f'images/{img_name}', 'rb') as f:
        picture = discord.File(f)
        await ctx.send(file=picture)

@bot.command(name="$rare")
async def rare(ctx):
    sans = random.randint(1, 100)
    
    if sans > 90:
        mesaj = "İNANILMAZ! Efsanevi bir şey buldum!"
        dosya = "legendary.jpg"
    elif sans > 50:
        mesaj = "Bak bu biraz nadir bir parça!"
        dosya = "rare.jpg"
    else:
        mesaj = "Sıradan bir şey işte, herkesin gördüğü..."
        dosya = "common.jpg"
        
    with open(f'images/{dosya}', 'rb') as f:
        picture = discord.File(f)
        await ctx.send(content=mesaj, file=picture)
